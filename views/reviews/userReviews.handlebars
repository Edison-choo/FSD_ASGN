{{#each reviews}}
<!-- Modal -->
<div
  class="modal fade"
  id="exampleModal{{id}}"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button
          type="button"
          class="btn-close"
          data-mdb-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body"><h2 style="text-align: center; font-size: 30px;">Are you sure you want to delete?</h2></div>
      <div class="modal-footer">
        <a class="btn btn-primary" style="background-color: #BB4450; float: right; margin-left: 5px;" href="/userReviews/{{id}}" role="button">Delete</a>
      </div>
    </div>
  </div>
</div>
{{/each}}

<div class="container">
    <h2>My Reviews</h2>
    <hr>
    {{#if reviews}}
    {{#each reviews}}
    <h2 style="color: #ffa012;">{{restaurant}}</h2>
    <span class="fa fa-star checked"></span>
    <span class="fa fa-star checked"></span>
    <span class="fa fa-star checked"></span>
    <span class="fa fa-star checked"></span>
    <span class="fa fa-star checked"></span>
    <p class="card-text">Overall: {{average}} <span class="fa fa-star checked"></span> | Food: {{food}}<span class="fa fa-star checked"></span> | Environment: {{environment}}<span class="fa fa-star checked"></span></p>
    <p class="card-text"> {{comments}}</p>
    <div class="buttons">
      <div class="action_btn">
        <form action="">
          <button type="button" class="btn btn-primary" data-mdb-toggle="modal" data-mdb-target="#exampleModal{{id}}" style="background-color: #BB4450; float:right; margin-left: 5px;">Delete</button>
        </form>
          <form action="/userReviews/editReviews/{{id}}" method="GET" >
          <button class="btn btn-primary" style="background-color: #3b5998; float: right; margin-bottom: 5px;">Edit</button>
          </form>
      </div>
    </div>
    <br>
    <hr>

    
    {{/each}}
    {{else}}
    <h3 style="text-align: center;">You have yet to review a restaurant</h3>
    {{/if}}

</div>

<style>
    .checked {
        color: orange;
        text-align: :;
    }
</style>