                        }
                    }
                }
            }
            const dataList = []
            data.menus.forEach((menu) => {
                if (menu.type == type) {
                    if (orderList.indexOf(menu.id.toString()) >= 0) {
                        dataList.push(orderList.filter(n => n == menu.id).length);
                    } else {
                        dataList.push(0)
                    }
                }
                
            })
            const dataStat = {
