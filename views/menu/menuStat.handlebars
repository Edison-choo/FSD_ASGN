                    'rgb(75, 192, 192)',
                    'rgb(54, 162, 235)',
                    'rgb(153, 102, 255)',
                    'rgb(201, 203, 207)'
                    ],
                    borderWidth: 1,
                    data: dataList,
                }]
            };
            const config = {
                type: 'bar',
                data:dataStat,
                options: {
                    plugins: {
                        title: {
                            display: true,
                            font: { weigth: 'bold', size: 20 },
                            text: 'Amount of orders for each food'
                        }
                    },
                    scale: {
                        ticks: {
                            precision: 0
                        }
                    }
                }
            };
            myChart = new Chart(
                document.getElementById('myChart'),
                config
            );
        })
        .catch(err => console.error(err));
    }

