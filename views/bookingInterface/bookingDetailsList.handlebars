<head>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</head>

<head>


<body>
  <div class="container" style="">
    <h1 style="text-align: center;">Notifications</h1>
    <ul class="nav nav-tabs mb-3" id="ex1" role="tablist">
      <li class="nav-item" role="presentation">
        <a class="nav-link active" id="ex1-tab-1" data-mdb-toggle="tab" href="#ex1-tabs-1" role="tab"
          aria-controls="ex1-tabs-1" aria-selected="true">Pending Bookings</a>
      </li>
      <li class="nav-item" role="presentation">
        <a class="nav-link" id="ex1-tab-2" data-mdb-toggle="tab" href="#ex1-tabs-2" role="tab"
          aria-controls="ex1-tabs-2" aria-selected="false">Confirmed Bookings</a>
      </li>
    </ul>

    <div class="tab-content" id="ex1-content">
      <div class="tab-pane fade show active" id="ex1-tabs-1" role="tabpanel" aria-labelledby="ex1-tab-1">
        <table id="tableforstuffs" class="table table-striped table-bordered" cellspacing="0" width="100%">
          <thead>
            <tr>
              <th class="th-sm">Date
              </th>
              <th class="th-sm">Time
              </th>
              <th class="th-sm">Restaurant Name
              </th>
              <th class="th-sm">Pax
              </th>
              <th class="th-sm">Email
              </th>
              <th class="th-sm">Update
              </th>
              <th class="th-sm">Delete
              </th>
            </tr>
          </thead>
          <tbody>
            {{#each booking}}
            {{#ifEquals this.confirm false}}
            <tr>

              <td>{{this.date}}</td>
              <td>{{this.timing}}</td>
              <td>{{this.res_name}}</td>

              <td>{{this.pax}}</td>
              <td>{{this.email}}</td>
              <td><a class="btn btn-primary" style="background-color: #3b5998;"
                  href="/bookingInterface/updateForm/{{this.email}}/{{this.res_name}}" role="button"><i class="fas fa-edit"></i></a>
              </td>
              <td><a class="btn btn-primary" style="background-color: #894242;" href="/bookingInterface/deleteBooking/{{this.email}}/{{this.res_name}}" role="button"
                  data-toggle="confirmation" data-title="Confirm delete?"><i class="fas fa-ban"></i></a></td>
            </tr>
            {{/ifEquals}}
            {{/each}}
          </tbody>

        </table>
      </div>
      <div class="tab-pane fade" id="ex1-tabs-2" role="tabpanel" aria-labelledby="ex1-tab-2">
        <table id="tableforstuffs" class="table table-striped table-bordered" cellspacing="0" width="100%">
          <thead>
            <tr>
              <th class="th-sm">Date
              </th>
              <th class="th-sm">Time
              </th>
              <th class="th-sm">Restaurant Name
              </th>
              <th class="th-sm">Pax
              </th>
              <th class="th-sm">Email
              </th>
              <th class="th-sm">Update
              </th>
              <th class="th-sm">Delete
              </th>
            </tr>
          </thead>
          <tbody>
            {{#each booking}}
            {{#ifEquals this.confirm true}}
            <tr>

              <td>{{this.date}}</td>
              <td>{{this.timing}}</td>
              <td>{{this.res_name}}</td>
              <td>{{this.pax}}</td>
              <td>{{this.email}}</td>
              <td><a class="btn btn-primary" style="background-color: #3b5998;"
                  href="/bookingInterface/updateForm/{{this.email}}/{{this.res_name}}" role="button"><i class="fas fa-edit"></i></a>
              </td>
              <td><a class="btn btn-primary" style="background-color: #894242;" href="/bookingInterface/deleteBooking/{{this.email}}/{{this.res_name}}" role="button"
                  data-toggle="confirmation" data-title="Confirm delete?"><i class="fas fa-ban"></i></a></td>
            </tr>
            {{/ifEquals}}
            {{/each}}
          </tbody>

        </table>


        <br>
      </div>


      {{#ifEquals booking undefined}}
      <div>
        <p style="text-align: center;">There are no bookings under {{this.email}}</p>
      </div>
      {{/ifEquals}}
</body>

</head>