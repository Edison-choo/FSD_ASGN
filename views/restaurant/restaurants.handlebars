<style>
    .checked {
        color: orange;
    }

    .card {
        display: inline-block;
        margin: 15px;
    }
</style>
<!-- Cards -->
{{#each restaurant}}
<button onclick="gotoRestaurant()">
    <div class="card" style="width: 18rem;">
        <img src="https://d1nqx6es26drid.cloudfront.net/app/uploads/2019/11/05175538/McD_TheToken%C2%AE_1235_RGB.png"
            alt="..." class="img-fluid center" />
        <div class="card-body" id="restId" data-id={{this.id}}>
            <h5 class="card-title">{{this.res_name}}</h5>
            <p class="card-text">{{this.address}}{{#if this.halal}}Â·Halal{{/if}}</p>
        </div>
    </div>
</button>

{{/each}}


<script>
    function gotoRestaurant() {
        var id = document.getElementById("restId").data - id
        localStorage.setItem("id", id)
        location.replace("restaurant/restaurant_1")
    }
</script>