<script>
    function buildGrid(cols, rows) {

        var tableMarkup = "";
        vert = 'abcdefghijklmnopqr'
        for (x = 0; x < rows; x++) {
            tableMarkup += "<tr>";
            for (y = 0; y < cols; y++) {
                tableMarkup += "<td><div id ='" + y + vert[x] + "' class='checkTD'></div></td>";
            }
            tableMarkup += "</tr>";
        }

        $("#drawing-table").html(tableMarkup)

    };

    $(function () {

        // Variable Setup
        var cols = 32,
            rows = 18,
            seatList = [],
            squareList = [],
            $el;

        // Inital Build of Table  
        buildGrid(cols, rows);
    });

</script>