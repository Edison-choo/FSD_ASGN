    </div>
</div>
<br>
<div id="table-wrap">
    <table id="drawing-table" class="center">
        <tr>
            <td></td>
        </tr>
    </table>
</div>

<script>
    function buildGrid(cols, rows) {

        var tableMarkup = "";

        for (x = 0; x < rows; x++) {
            tableMarkup += "<tr>";
            for (y = 0; y < cols; y++) {
                tableMarkup += "<td><div class='square'></div></td>";
            }
            tableMarkup += "</tr>";
        }

        $("#drawing-table").html(tableMarkup)

    };

    $(function () {

        // Variable Setup
        var cols = 40,
            rows = 30,
            curColor = "red",
            mouseDownState = false,
            eraseState = false,
            tracingMode = false,
            prevColor = "",
            $el;

        // Inital Build of Table  
        buildGrid(cols, rows);
    });

</script>