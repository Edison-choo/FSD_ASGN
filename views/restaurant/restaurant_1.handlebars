<script>
    function copyToClipboard(element) {
        var $temp = $("<input>");
        $("body").append($temp);
        $temp.val($(element).text()).select();
        document.execCommand("copy");
        $temp.remove();
    }
    function buildGrid(cols, rows) {

        var tableMarkup = "";
        vert = 'abcdefghijklmnopqr'
        for (x = 0; x < rows; x++) {
            tableMarkup += "<tr>";
            for (y = 0; y < cols; y++) {
                tableMarkup += "<td><div id ='" + y + vert[x] + "' class='checkTD'></div></td>";
            }
            tableMarkup += "</tr>";
        }

        $("#drawing-table").html(tableMarkup)

    };

    $(function () {

        // Variable Setup
        var cols = 32,
            rows = 18,
            seatList = "{{restaurant.seat}}".split(","),
            squareList = "{{restaurant.square}}".split(","),
            tblDic = JSON.parse('{{restaurant.tables}}'.replace(/&quot;/g, '"')),
            occupied = "{{restaurant.occupied}}".split(","),
            $el;
        buildGrid(cols, rows);
        for (i in seatList) {
            $("#" + seatList[i]).removeClass("checkTD")
            $("#" + seatList[i]).addClass("seat")
        }
        for (i in squareList) {
            $("#" + squareList[i]).removeClass("checkTD")
            $("#" + squareList[i]).addClass("square")
        }
        for (const [key, value] of Object.entries(tblDic)) {
            for (i in value) {
                $("#" + value[i]).addClass(key)
            }
        }
        for (i in occupied) {
            if (occupied[i].length > 0) {
                $("." + occupied[i]).addClass("taken")
            }
        }
    });
    $(function () {
        fetch('/restaurant/restaurant_1/pagination/{{restaurant.res_name}}', {
            headers: {
                "Content-Type": "application/json"
            },
        })
            .then(response => {
                console.log(response);
                return response.json();
            })
            .then(data => {
                function simpleTemplating(data) {
                    var html = '<ul>';
                    $.each(data, function (index, item) {
                        html += '<li>' + item + '</li>' + '<hr>';
                    });
                    html += '</ul>';
                    return html;
                }

                $("#pagination-container").pagination({
                    dataSource: data.reviews.map(r => `<div>
                <p style="margin-top: 5px">Overall: ${r.average} <span class="fa fa-star checked"></span> | Food: ${r.food}<span class="fa fa-star checked"></span> | Service: ${r.service} <span class="fa fa-star checked"></span> | Environment: ${r.environment} <span class="fa fa-star checked"></span></p>
                <p>${r.comments}</p>
                </div>`),
                    pageSize: 3,
                    callback: function (data, pagination) {
                        // template method of yourself
                        var html = simpleTemplating(data);
                        $('#data-container').html(html);
                    }
                })
            })
    })

    $(function () {
