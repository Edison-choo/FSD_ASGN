<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
    .checked {
        color: orange;
    }

    .seat {
        height: 25px;
        width: 25px;
        background-color: green;
        border-radius: 50%;
    }

    .square {
        height: 25px;
        width: 25px;
        background-color: green;
    }

    .center {
        margin-left: auto;
        margin-right: auto;
    }

    .tableLayout {
        border-collapse: collapse;
    }

    .tableLayout td {
        padding: 0;
        margin: 0;
    }

    .checkTD {
        height: 25px;
        width: 25px;
    }

    .taken {
        background-color: red;
    }

    .default {
        padding: 40px;
        margin: auto;
    }

    table:hover .btn-floating {
        display: block;
    }

    .icon_padding {
        padding-right: 50px;
    }
</style>
<div class="media row default FDefaultTab">
    <img src="{{restaurant.image}}" class="align-self-start mr-3 col-md-4" alt="..."
        style="max-height: 400px; max-width: 400px;">

    <div class="media-body col-md-8">
        <div class="media-body">
            <h1 class="mt-0">{{restaurant.res_name}} |
                <!-- Facebook -->
                {{#if restaurant.facebook}}
                <a style="color: #3b5998;" href="{{restaurant.facebook}}" role="button"><i
                        class="fab fa-facebook-f fa-lg"></i></a>
                {{else}}{{/if}}
                <!-- Twitter -->
                {{#if restaurant.twitter}}
                <a style="color: #55acee;" href="{{restaurant.twitter}}" role="button"><i
                        class="fab fa-twitter fa-lg"></i></a>
                {{else}}{{/if}}
                <!-- Instagram -->
                {{#if restaurant.instagram}}
                <a style="color: #ac2bac;" href="{{restaurant.instagram}}" role="button"><i
                        class="fab fa-instagram fa-lg"></i></a>
                {{else}}{{/if}}
            </h1>
            <div>
                {{totalaverage}}
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                | {{reviews.length}} Reviews
                | <i class="fas fa-money-bill"></i> ${{priceFormat restaurant.price}} | {{restaurant.queue}} Queueing...

            </div>
            <hr>
            <table class="table table-borderless table-hover">
                <tr>
                    <td><i class="fas fa-map-marker-alt icon_padding"></i><span
                            id="address">{{restaurant.address}}<span /><span style="float: right;"><a title="Copy"
                                    role="button" onclick="copyToClipboard('#address')"> <i
                                        class="far fa-clone"></i></a></span>
                        </span></td>
                </tr>
                <tr>
                    <td><i class="far fa-clock icon_padding"></i>{{timeFormat restaurant.open_time}} -
                        {{timeFormat restaurant.close_time}}</td>
                </tr>
                <tr>
                    <td><i class="fas fa-utensils icon_padding"></i>{{restaurant.cuisine}}
                    </td>
                </tr>
                <tr>
                    <td><img src="https://static.thenounproject.com/png/509419-200.png" alt=""
                            style="width: 15px; height: 15px;"><span style="padding-left: 45px;"></span>
                        {{#if restaurant.halal}}
                        Halal
                        {{else}}
                        Not Halal
                        {{/if}}
                    </td>
                </tr>
                <tr>
                    <td><i class="fas fa-phone icon_padding"></i><span id="phone">{{restaurant.phone}}<span /><span
                                style="float: right;"><a title="Copy" role="button" onclick="copyToClipboard('#phone')">
                                    <i class="far fa-clone"></i></a></span></td>
                </tr>
                <tr>
                    <td><i class="fas fa-envelope icon_padding"></i><span id="email"><a
                                href="mailto:{{restaurant.comp_email}}">{{restaurant.comp_email}}</a><span /><span
                                style="float: right;"><a title="Copy" role="button" onclick="copyToClipboard('#email')">
                                    <i class="far fa-clone"></i></a></span></td>
                </tr>
            </table>
            <div class="row">
                <div class="col-6">
                    <a href="../../bookingInterface/bookForm/{{restaurant.res_name}}"
                        class="btn FDefaultButton btn-block">Book a table</a>
                </div>
                <div class="col-6">
                    <a href="../../menu/view/{{restaurant.res_name}}" class="btn FDefaultButton btn-block">Menu</a>
                </div>
            </div>

        </div>
    </div>
</div>
<br>

<div id="table-wrap" class="default FDefaultTab" style="overflow-x:auto;">
    {{#if restaurant.square}}

    <table id="drawing-table" class="center tableLayout">
        <tr>
            <td></td>
        </tr>
    </table>
    <hr>
    <div style="text-align: center;"><i class="fas fa-square-full" style="color: green;"></i> - Vacant <span
            style="padding-left: 45px;"></span> <i class="fas fa-square-full" style="color: red;"></i> - Occupied</div>

    {{else}}
    <h1 style="text-align: center;">Layout in Progress...</h1>
    {{/if}}
</div>
<br>
<iframe class="FDefaultTab" width="100%" height="450" style="border:0" loading="lazy" allowfullscreen src="https://www.google.com/maps/embed/v1/place?key=AIzaSyAAILFYex9lS_h9Pk3xXmBzfCidfoLNuXU
    &q={{restaurant.res_name}},Sinagpore">
</iframe>
<br><br>
<div class="default FDefaultTab">
    {{#if reviews}}
    <div class="row">
        <div class="col-2">
            <div style="font-size: 30px;">
                {{totalaverage}} out of 5
            </div>
            <div>
                <span class="fa fa-star checked" style="font-size: 20px;"></span>
                <span class="fa fa-star checked" style="font-size: 20px;"></span>
                <span class="fa fa-star checked" style="font-size: 20px;"></span>
                <span class="fa fa-star checked" style="font-size: 20px;"></span>
                <span class="fa fa-star checked" style="font-size: 20px;"></span>
            </div>
        </div>
        <div class="col-10">
            <a href="../../reviews/reviews/{{restaurant.res_name}}" class="btn FDefaultButton btn-block">Click here to
                see all the reviews!</a>
        </div>
    </div>
    {{else}}
    <p style="font-size: 25px; font-weight: bold;">Be the first one to review this restaurant!</p>
    <hr>
    <p>Currently, {{restaurant.res_name}} has no reviews. Please leave a review after your dining experience to help
        others make a decision about where to eat</p>
    {{/if}}
</div>


<script>
    function copyToClipboard(element) {
        var $temp = $("<input>");
        $("body").append($temp);
        $temp.val($(element).text()).select();
        document.execCommand("copy");
        $temp.remove();
    }
    function buildGrid(cols, rows) {

        var tableMarkup = "";
        vert = 'abcdefghijklmnopqr'
        for (x = 0; x < rows; x++) {
            tableMarkup += "<tr>";
            for (y = 0; y < cols; y++) {
                tableMarkup += "<td><div id ='" + y + vert[x] + "' class='checkTD'></div></td>";
            }
            tableMarkup += "</tr>";
        }

        $("#drawing-table").html(tableMarkup)

    };

    $(function () {

        // Variable Setup
        var cols = 32,
            rows = 18,
            seatList = "{{restaurant.seat}}".split(","),
            squareList = "{{restaurant.square}}".split(","),
            tblDic = JSON.parse('{{restaurant.tables}}'.replace(/&quot;/g, '"')),
            occupied = "{{restaurant.occupied}}".split(","),
            $el;
        buildGrid(cols, rows);
        for (i in seatList) {
            $("#" + seatList[i]).removeClass("checkTD")
            $("#" + seatList[i]).addClass("seat")
        }
        for (i in squareList) {
            $("#" + squareList[i]).removeClass("checkTD")
            $("#" + squareList[i]).addClass("square")
        }
        for (const [key, value] of Object.entries(tblDic)) {
            for (i in value) {
                $("#" + value[i]).addClass(key)
            }
        }
        for (i in occupied) {
            if (occupied[i].length > 0) {
                $("." + occupied[i]).addClass("taken")
            }
        }
    });
</script>