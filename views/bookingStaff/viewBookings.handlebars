<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>



<div>
  <h1 style="text-align: center;">Bookings for {{user.fname}}</h1>




  <ul class="nav nav-tabs mb-3" id="ex1" role="tablist">
    <li class="nav-item" role="presentation">
      <a class="nav-link active" id="ex1-tab-1" data-mdb-toggle="tab" href="#ex1-tabs-1" role="tab"
        aria-controls="ex1-tabs-1" aria-selected="true">Pending Bookings</a>
    </li>
    <li class="nav-item" role="presentation">
      <a class="nav-link" id="ex1-tab-2" data-mdb-toggle="tab" href="#ex1-tabs-2" role="tab" aria-controls="ex1-tabs-2"
        aria-selected="false">Confirmed Bookings</a>
    </li>
  </ul>

  <div class="tab-content" id="ex1-content">
    <div class="tab-pane fade show active" id="ex1-tabs-1" role="tabpanel" aria-labelledby="ex1-tab-1">
      <table id="tableforstuffs" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
          <tr>
            <th class="th-sm">Date
            </th>
            <th class="th-sm">Time
            </th>
            <th class="th-sm">First Name
            </th>
            <th class="th-sm">Last Name
            </th>
            <th class="th-sm">Pax
            </th>
            <th class="th-sm">Email
            </th>
            <th class="th-sm">Accept
            </th>
            <th class="th-sm">Reject
            </th>
          </tr>
        </thead>
        <tbody>
          {{#each booking}}
          {{#ifEquals this.confirm false}}
          <tr>
            <td>{{this.date}}</td>
            <td>{{this.timing}}</td>
            <td>{{this.firstName}}</td>
            <td>{{this.lastName}}</td>
            <td>{{this.pax}}</td>
            <td>{{this.email}}</td>
            <td><a class="btn btn-primary" style="background-color: #25d366;"
                href="/bookingStaff/acceptBooking/{{this.email}}/{{this.res_name}}" role="button"><i
                  class="fas fa-check"></i></a></td>
            <td><a class="btn btn-primary" style="background-color: #894242;"
                href="/bookingStaff/deleteBooking/{{this.email}}/{{this.res_name}}" role="button"
                data-toggle="confirmation" data-title="Confirm delete?" onclick="return confirm('Are you sure you want to delete this booking?')"><i class="fas fa-ban"></i></a></td>
          </tr>
          {{/ifEquals}}
          {{/each}}
          {{#ifEquals booking null}}
          <p>There are no bookings pending</p>
          {{/ifEquals}}
        </tbody>

      </table>
    </div>
    <div class="tab-pane fade" id="ex1-tabs-2" role="tabpanel" aria-labelledby="ex1-tab-2">
      <table id="tableforstuffs" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
          <tr>
            <th class="th-sm">Date
            </th>
            <th class="th-sm">Time
            </th>
            <th class="th-sm">First Name
            </th>
            <th class="th-sm">Last Name
            </th>
            <th class="th-sm">Pax
            </th>
            <th class="th-sm">Email
            </th>
          </tr>
        </thead>
        <tbody>
          {{#each booking}}
          {{#ifEquals this.confirm true}}
          {{#dateDiff this.date}}
          {{else}}
          <tr>

            <td>{{this.date}}</td>
            <td>{{this.timing}}</td>
            <td>{{this.firstName}}</td>
            <td>{{this.lastName}}</td>
            <td>{{this.pax}}</td>
            <td>{{this.email}}</td>
          </tr>
          {{/dateDiff}}
          {{/ifEquals}}
          {{/each}}
        </tbody>

      </table>
    </div>
  </div>
</div>

