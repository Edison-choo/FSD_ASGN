/* Style the tab */
.tab {
  overflow: hidden;
  border: 1px solid #ccc;
  background-color: #f5f5f5;
  border-radius: 4px;
}

/* Style the buttons inside the tab */
.tab button {
  background-color: inherit;
  float: left;
  border: none;
  outline: none;
  cursor: pointer;
  padding: 14px 16px;
  transition: 0.3s;
  font-size: 17px;
  color:rgba(0,0,0,.6);
  width: 50%;
}

/* Change background color of buttons on hover */
.tab button:hover {
  background-color: #ddd;
}

/* Create an active/current tablink class */
.tab button.active {
  background-color: #1266f1;
  color: white;
}

/* Style the tab content */
.tabcontent {
  display: none;
  padding: 6px 12px;
  border-top: none;
  width: 80%;
  margin: 0 auto;
}
.rightCont{
  width: 70%;
  float: right;
  margin-top: -10%;
  margin-right: 3%;
  font-size: 17px;
  margin-bottom: 5%;
}


</style>

