<style>
    .backTheme {
        background-color: #35322d;
        color: #FFFFFF;
        padding: 20px;
        border-radius: 15px;
        display: block;
        margin-left: auto;
        margin-right: auto;
        max-width: 900px;
    }

    .tblTheme {
        background-color: #35322d;
        color: #FFFFFF;
        padding: 20px;
        
    }

    th {
        color: #ffb03b;
    }

    img {
        margin: 20px;
    }

    .table-hover {
        color: white;
         !important
    }

    .center {
        display: block;
        margin-left: auto;
        margin-right: auto;
        width: 50%;
    }
</style>

<div class="backTheme">
    <h1 style="text-align: center;">{{restaurant.res_name}}</h1>
    <hr>
    <img src="{{restaurant.image}}" alt="" style="width: 400px;" class="center">
    
    <table class="table table-dark table-hover tblTheme center" >
        <tr>
            <th>Location:</th>
            <td>{{restaurant.address}}</td>
        </tr>
        <tr>
            <th>Opening Time:</th>
            <td>{{restaurant.open_time}}</td>
        </tr>
        <tr>
            <th>Closing Time:</th>
            <td>{{restaurant.close_time}}</td>
        </tr>
        <tr>
            <th>Cuisine:</th>
            <td>{{restaurant.cuisine}}</td>
        </tr>
        <tr>
            <th>Halal:</th>
            <td>
                {{#if restaurant.halal}}Yes{{/if}}
                {{#else}}No{{/else}}
            </td>
        </tr>
        <tr>
            <th>Email:</th>
            <td>{{restaurant.comp_email}}</td>
        </tr>
    </table>
    <a href="/staffRestaurant/editRestaurant" class="btn btn-light btn-rounded center">Edit Restaurant</a>
</div>