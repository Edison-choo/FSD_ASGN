    .checkTD {
        display: block;
        position: relative;
        height: 25px;
        width: 25px;
        cursor: pointer;
        background-color: yellow;
    }

    .checkTD:hover {
        background-color: grey;
    }

    .checkInp {
        position: absolute;
        opacity: 0;
        cursor: pointer;
        height: 0;
        width: 0;
    }

    .checkInp:checked~.checkTD::after {
        background-color: green;
    }
</style>

<h1>Create your restaurant layout:</h1>
<form action="" method="post">
    <div id="table-wrap">
        <table id="drawing-table" class="center">
            <tr>
                <td></td>
            </tr>
        </table>
    </div>
</form>
<button>Click Me</button>
<script>
    function checkTable() {
        vert = 'abcdefghijklmnopqr'
        for (x = 0; x < rows; x++) {
            for (y = 0; y < cols; y++) {
                checkBox = document.getElementById(y + vert[x]).checked;
                if (checkBox) {
                    document.getElementById(y + vert[x] + "label").style.backgroundColor = "red;"
                }
            }

        }
    }
    function buildGrid(cols, rows) {

        var tableMarkup = "";
        vert = 'abcdefghijklmnopqr'
        for (x = 0; x < rows; x++) {
            tableMarkup += "<tr>";
            for (y = 0; y < cols; y++) {
                tableMarkup += "<td><div id='" + y + vert[x] + "' class='checkTD'></div></td>";
            }
            tableMarkup += "</tr>";
        }

        $("#drawing-table").html(tableMarkup)

    };

    $(function () {

        // Variable Setup
        var cols = 32,
            rows = 18,
            curColor = "red",
            mouseDownState = false,
            eraseState = false,
            tracingMode = false,
            prevColor = "",
            $el;

        // Inital Build of Table  
        buildGrid(cols, rows);
        $("#drawing-table").delegate("td", "mousedown", function () {
            mouseDownState = true;
            $el = $(this);
            if (eraseState) {
                $el.removeAttr("style");
            } else {
                $el.css("background", curColor);
            }
        })
    });

</script>